@model Myket_Shop.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- login----------------------------------->
<div class="container">
    <div class="row">
        <div class="col-lg">
            <section class="page-account-box">
                <div class="col-lg-6 col-md-6 col-xs-12 mx-auto">
                    <div class="ds-userlogin">
                        <a href="#" class="account-box-logo">digismart</a>
                        <div class="account-box">
                            <div class="account-box-headline">
                                <a href="login.html" class="login-ds active">
                                    <span class="title">ورود</span>
                                    <span class="sub-title">به دیجی اسمارت</span>
                                </a>
                                <a asp-action="Register" class="register-ds">
                                    <span class="title">ثبت نام</span>
                                    <span class="sub-title">در دیجی اسمارت</span>
                                </a>
                            </div>
                            <div class="Login-to-account mt-4">
                                <div class="account-box-content">
                                    <h4>ورود به حساب کاربری</h4>
                                    <div class="col-row">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <div class="alert alert-danger">
                                                <p>شما دسترسی ندارید</p>
                                            </div>
                                        }
                                    </div>
                                    <form class="form-account text-right" asp-action="Login">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-account-title">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="number-email-input" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-account-title">
                                            <label asp-for="Password" class="control-label"></label>
                                            <input asp-for="Password" class="password-input" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <a href="#" class="account-link-password">رمز خود را فراموش کرده ام</a>
                                        </div>
                                        <div class="form-auth-row">
                                            <label class="ui-checkbox mt-1">
                                                <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                                <span class="ui-checkbox-check"></span>
                                            </label>
                                        </div>
                                        <div class="form-row-account">
                                            <button class="btn btn-primary btn-login" type="submit" value="Create">ورود به مایکت</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- login----------------------------------->
@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}