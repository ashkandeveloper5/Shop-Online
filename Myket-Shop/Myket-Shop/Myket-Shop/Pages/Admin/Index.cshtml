@page
@model Myket_Shop.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Index";
}


<section id="shopping-cart">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-warning">
                        <h4 class="card-title">لیست محصولات</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">
                        <div class="table-responsive">
                            <a asp-page="Add" class="btn btn-sm btn-outline-success round mb-0" type="button">افزودن</a>
                            <table id="recent-orders" class="table table-hover table-xl mb-0">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">نام</th>
                                        <th class="border-top-0">قیمت</th>
                                        <th class="border-top-0">دستور</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Products)
                                    {
                                        <tr>

                                            <td class="text-truncate">
                                                <span class="avatar avatar-xs">
                                                    <img class="box-shadow-2" src="/dimage/@(item.Id).jpg" alt="avatar">
                                                </span>
                                                <span>@item.Name</span>
                                            </td>
                                            <td class="text-truncate"> @item.Item.Price تومان</td>
                                            <td>
                                                <a asp-page="Edit" asp-route-id="@item.Id" class="success p-0" data-original-title="" title="">
                                                    <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                                </a>
                                                <a class="info p-0" data-original-title="" title="">
                                                    <i class="fa fa-check font-medium-3 mr-2"></i>
                                                </a>
                                                <a asp-page="Delete" asp-route-id="@item.Id" class="danger p-0" data-original-title="" title="">
                                                    <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
